.newsList {
	margin:30rpx;
	box-shadow: 0 0 4px rgba(0,0,0,0.3);
	border-radius: 8rpx;
}

.newsList .newsImg {
    width: 100%;
    height: 240rpx;
	overflow: hidden;
	border-top-left-radius: 8rpx;
	border-top-right-radius: 8rpx;
}

.newsList .newsImg image {
    width: 100%;
    height: 240rpx;
}

.newsList .title {
    padding: 5rpx 10rpx;
    color: #333;
    font-weight: bold;
}

.newsList .otherHint {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
    padding: 5rpx 10rpx;
}
